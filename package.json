{
	"name": "@natlibfi/melinda-record-import-transformer-publication-archives",
	"description": "Publication archives record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-publication-archives",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-publication-archives/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-publication-archives.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"check-deps": "",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js",
		"test:dev": "npm run lint:dev && npm run test:base -- src/**/*.spec.js",
		"build": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
		"build:dev": "npm run build:transpile && npm run check-deps",
		"build:transpile": "babel src --source-maps --out-dir=dist --minified",
		"watch": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm run test:dev'"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^4.0.0",
		"@natlibfi/marc-record-validate": "^5.0.1",
		"@natlibfi/marc-record-validators-melinda": "^8.0.0",
		"@natlibfi/melinda-commons": "^7.0.0",
		"@natlibfi/melinda-record-import-commons": "^7.0.1",
		"get-stream": "^5.1.0",
		"langs": "^2.0.0",
		"moment": "^2.22.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.7.5",
		"@babel/core": "^7.7.5",
		"@babel/node": "^7.2.0",
		"@babel/preset-env": "^7.7.6",
		"@babel/register": "^7.6.2",
		"babel-eslint": "^10.0.3",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"cross-env": "^6.0.0",
		"eslint": "^6.4.0",
		"eslint-config-xo": "<1.0.0",
		"eslint-plugin-import": "^2.19.1",
		"mocha": "^6.2.0",
		"nodemon": "^1.19.2",
		"npm-check": "^5.9.0",
		"nyc": "^14.1.1",
		"rimraf": "^3.0.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "10"
					}
				}
			]
		]
	}
}
