{
	"name": "@natlibfi/melinda-record-import-transformer-publication-archives",
	"description": "Publication archives record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-publication-archives",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-publication-archives/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-publication-archives.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check --skip-unused",
		"lint": "eslint --fix src",
		"test:unit:base": "cross-env NODE_ENV=test nyc -x test-fixtures -x test/**/*.spec.js mocha --require @babel/register",
		"test:unit": "npm run test:unit:base -- test/**/*.spec.js",
		"test": "npm run lint && npm run test:unit && npm run coverage",
		"clean": "rimraf build dist",
		"coverage": "nyc check-coverage --per-file",
		"build:transpile": "babel src --source-maps --out-dir=dist --minified",
		"build": "npm run build:transpile && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm test && babel-node src/index.js'",
		"watch:build": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'babel-node src/index.js'",
		"publish-to-npm": "npm install && npm test && npm run coverage && npm publish --access=public"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^4.0.0",
		"@natlibfi/marc-record-validate": "^5.0.0",
		"@natlibfi/marc-record-validators-melinda": "^7.0.4",
		"@natlibfi/melinda-commons": "^7.0.1",
		"@natlibfi/melinda-record-import-commons": "6.0.2",
		"get-stream": "^5.1.0",
		"langs": "^2.0.0",
		"moment": "^2.22.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.0",
		"@babel/core": "^7.2.0",
		"@babel/node": "^7.2.0",
		"@babel/preset-env": "^7.2.0",
		"@babel/register": "^7.6.2",
		"babel-eslint": "^10.0.3",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"cross-env": "^6.0.0",
		"eslint": "^6.4.0",
		"eslint-config-xo": "^0.26.0",
		"eslint-plugin-import": "^2.18.2",
		"mocha": "^6.2.0",
		"nodemon": "^1.19.2",
		"npm-check": "^5.9.0",
		"nyc": "^14.1.1",
		"rimraf": "^3.0.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		]
	}
}
